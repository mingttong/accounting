.container {
  padding: 0 30rpx;
}

.container .box {
  margin-top: 30rpx;
  padding: 36rpx 26rpx;
  background-color: #fff;
  position: relative;
  -webkit-box-shadow: 0 1px 10px 0 rgba(0, 0, 0, 0.1);
          box-shadow: 0 1px 10px 0 rgba(0, 0, 0, 0.1);
}

.container .box .info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-bottom: 30rpx;
}

.container .box .info image {
  width: 124rpx;
  height: 124rpx;
  margin-right: 20rpx;
  background-color: #ccc;
}

.container .box .info .detail .name {
  font-size: 32rpx;
  line-height: 42rpx;
  color: #333;
}

.container .box .info .detail .tags {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 8rpx;
}

.container .box .info .detail .tags .icon {
  background-color: #fff5e6;
  border-radius: 2rpx;
  color: #f5da45;
  margin-right: 6rpx;
  padding: 6rpx;
  font-size: 24rpx;
}

.container .box .info .detail .star {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 6rpx;
}

.container .box .info .detail .require {
  color: #999;
  font-size: 28rpx;
}

.container .box .album {
  padding-top: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-top: 1rpx solid #f3f3f3;
}

.container .box .album .label {
  font-size: 30rpx;
  line-height: 100rpx;
  margin-right: 30rpx;
}

.container .box .album .images {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

.container .box .album .images image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}

.container .box .see-detail {
  font-size: 24rpx;
  color: #999;
  position: absolute;
  right: 26rpx;
  top: 36rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  line-height: 26rpx;
  height: 26rpx;
}

.container .box .see-detail .icon-see-more {
  margin-left: 4rpx;
}

.icon-see-more {
  background-image: url("data:image/png;base64,");
  width: 26rpx;
  height: 26rpx;
  background-size: 26rpx 26rpx;
}

.icon-star {
  background-image: url("data:image/png;base64,");
  width: 26rpx;
  height: 26rpx;
  background-size: 26rpx 26rpx;
}
