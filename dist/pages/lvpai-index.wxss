.container {
  padding-top: 110rpx;
}

.container .tabs-wrap {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  width: 100%;
  background: #fff;
  position: fixed;
  top: 0;
  z-index: 100;
  border-top: 2rpx solid #f3f3f3;
  font-size: 30rpx;
}

.container .tabs-wrap .tab-box {
  text-align: center;
  line-height: 88rpx;
  color: #666666;
  width: 200rpx;
}

.container .tabs-wrap .tab-box.selected {
  color: #87bfce;
}

.container .tabs-wrap .tab-box.selected::after {
  display: block;
  content: '';
  width: 100rpx;
  height: 6rpx;
  margin: 0 auto;
  background: #87bfce;
  border-radius: 42rpx;
}

.container .pub-list {
  background-color: #FFF;
  padding: 0 30rpx;
}

.container .pub-list .box {
  border-bottom: 1rpx solid #f3f3f3;
  padding-bottom: 30rpx;
}

.container .pub-list .box .info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 100rpx;
}

.container .pub-list .box .info .avator {
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.container .pub-list .box .info .center {
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
          flex-grow: 1;
}

.container .pub-list .box .info .center .username {
  font-size: 28rpx;
}

.container .pub-list .box .info .center .time {
  font-size: 24rpx;
  color: #999;
}

.container .pub-list .box .info .position {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 28rpx;
  line-height: 28rpx;
}

.container .pub-list .box .info .position .icon-position {
  background-image: url("data:image/png;base64,");
  background-size: 28rpx 28rpx;
  width: 28rpx;
  height: 28rpx;
}

.container .pub-list .box .big-image {
  width: 690rpx;
  height: 690rpx;
  border-radius: 10rpx;
}

.container .pub-list .box .title {
  font-size: 32rpx;
  margin-bottom: 15rpx;
}

.container .pub-list .box .summary {
  color: #999;
  font-size: 24rpx;
}
