
    <view class="container">
        <view class="section">
            <view class="form-item">
                <view class="label">姓名</view>
                <input class="input" type="text" placeholder="请输入"/>
            </view>
            <view class="form-item">
                <view class="label">身份证号</view>
                <input type="text" class="input" placeholder="请输入"/>
            </view>
        </view>
        <view class="section">
            <view class="form-item textarea">
                <view class="label">自我介绍</view>
                <textarea type="text" class="input" placeholder="请输入"/>
            </view>
            <view class="form-item">
                <view class="label">擅长拍摄类型</view>
                <input type="text" class="input" placeholder="请输入"/>
            </view>
