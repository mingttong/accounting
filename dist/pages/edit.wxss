}

.tab {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  background-color: #fff;
  border-bottom: 1rpx solid #ccc;
  height: 100rpx;
}

.tab .item {
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
  text-align: center;
  line-height: 100rpx;
}

.tab .active {
  color: #d74c45;
  position: relative;
}

.tab .active::after {
  display: block;
  content: '';
  width: 120rpx;
  height: 5rpx;
  position: absolute;
  bottom: 0;
  left: -webkit-calc(50% - 60rpx);
  left: calc(50% - 60rpx);
  background-color: #d74c45;
}

